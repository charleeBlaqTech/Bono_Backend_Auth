    <section id="login-form" class="section-mg section-pd">
        <h3>UPDATE PASSWORD</h3>
        <form action="/password/new" method="post">

            <div class="inputs-wrap">
                <input type="password" name="newPassword" class="showPassword" required placeholder="Enter your new Password">
                <input type="password" name="confirmedNewPassword" class="showPassword" required placeholder="confirm Your new password">
                <h6 id="show-password" style="cursor:pointer;"><i class="fa fa-user-plus" aria-hidden="true"></i><span style="text-transform:lowercase; color:#fff; ">Show Password / Hide password</span></h6>
            </div>
            
            <div class="btn-wrap">
               <button type="submit" class="btn">Update</button>
            </div>
        </form>
    </section>
    
