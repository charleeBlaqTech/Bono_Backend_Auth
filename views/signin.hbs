

   <section id="login-form" class="section-mg section-pd">
        <h3>LOGIN HERE</h3>
        <form action="/login" method="post">
            
            <input type="email" name="email" id="email" required placeholder="Enter your valid email">
            <input type="password" name="password" id="password" class="showPassword" required placeholder="Enter your password">
            <h6 id="show-password" style="cursor:pointer;"><i class="fa fa-user-plus" aria-hidden="true"></i><span style="text-transform:lowercase; color:#fff; ">Show Password / Hide password</span></h6>
            <button type="submit" class="btn">Login</button>
        </form>
        <p><button class="btn"><a href="/auth/google">Signin with Google</a></button></p>
        <p>have no accout?: <a href="/signup">click here to sign-up</a></p>
   </section>
    
